
#region  // Key assignment

key_left = keyboard_check(vk_left) or keyboard_check(ord("A")) ;
key_right = keyboard_check(vk_right) or keyboard_check(ord("D")) ;
key_up = keyboard_check(vk_up)  or keyboard_check(ord("W")) ; 
key_down = keyboard_check(vk_down)  or keyboard_check(ord("S")) ;
key_fire = keyboard_check(vk_space) ;
boss_mode = keyboard_check(ord("B")) ; 
#endregion

#region  // Movement Prediction
var move_h = key_right - key_left ; 
var move_v = key_up - key_down ;

walkspeed= walkspeed0 + speed_up/2

hsp = move_h * walkspeed ;
vsp = -(move_v * walkspeed) ;

#endregion

#region  // Speed up function + Animation on speed up
sprite_index = sPlayer
image_speed=0
if hsp != 0 or vsp!=0
{
	speed_up = speed_up + 1 ;
	for(i = 1; i < 6; i = i + 1 )
	{
		if speed_up == i * 12 
		{ 
			image_index = speed_up / 12 - 1  // Animation
		}
	}
	if speed_up > 60
	{
		speed_up = 60 ;
	}	
}
else
{
	frame_count1 = frame_count1+1 ;
	if frame_count1 = 60
	{
		speed_up=0 ;
		frame_count1=0 ;
		image_index=0 ;  // Animation 
	}
}

#endregion

#region  // Object Collision 
if place_meeting(x+hsp, y, oWall)
{
	while (!place_meeting(x+sign(hsp), y, oWall))
	{
		x = x + sign(hsp) ;
	}
	hsp = 0
}

if place_meeting(x, y + vsp , oWall)
{
	while (!place_meeting(x, y + sign(vsp), oWall))
	{
		y = y + sign(vsp) ;
	}
	vsp = 0
}

#endregion

#region  // Actual movement

x = x + hsp ;
y = y + vsp ;

#endregion

#region  // Firing mechanism

if heating_up>=150 overheated=1
else			//  Look into increasing the heating_up variable
				//  Make it be more all or nothing 
{				//  For example, if the player overheats, make him feel it 
	if heating_up<0 
	{
		overheated=0
		heating_up=0  //Ensures that heating_up can't be negative 
	}
}

firing_delay = firing_delay - 1 

if key_fire=1 and overheated=0 and firing_delay<0 
{                 //when 1, can't fire 
	firing_delay=2   //frames that the game waits until it fires again
	heating_up = heating_up + 40
	with(instance_create_layer(x,y, "Bullets", oBullet))
	{
		speed = 40    
				//Ask Andrew about the speed 
		direction = other.image_angle + 90
		image_angle = other.image_angle 
	}
}

if test1=1 heating_up = heating_up - 4 
else heating_up = heating_up - 7  //When he is overheated, decrease faster

for(i = 1; i < 6; i = i + 1 )   //In 5 steps atm
{
	if heating_up > i * 30 and heating_up < (i+1)*30
	{ 
		image_index = round(heating_up / 30) - 1  // Animation 
	}
}
	
#endregion

#region  // Boss Mode -Toggled by B 

if boss_mode=1 and frame_count2>60
{					//Ensures that you can't spam B 
	frame_count2=0
	if global.mode = "Wave"
	{
		image_angle = image_angle - 270
		global.mode = "Boss" //switches to Boss mode
	}
	else
	{
		image_angle = image_angle - 90 
		global.mode = "Wave" //switches to Wave mode 
	}	
}
else frame_count2 += 1

#endregion

